<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_youtube"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Youtube"
        android:onClick="openYoutube"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_dial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dial Number"
        android:onClick="dialNumber"
        android:layout_below="@id/button_youtube"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Open Map"
        android:onClick="openMap"
        android:layout_below="@id/button_dial"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Text"
        android:onClick="shareText"
        android:layout_below="@id/button_map" />
</RelativeLayout>